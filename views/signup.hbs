{{> welcomemenu id="signup"}}

<form class="ui stacked segment form" action="/register" method="POST">
  <h3 class="ui header">Register</h3>
  <div class="two fields">
    <div class="field">
      <label>First Name</label>
      <input placeholder="First Name" type="text"  name="firstName">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input placeholder="Last Name" type="text"  name="lastName">
    </div>
  </div>
  <div class="two fields">
  <div class="field">
    <label>Email</label>
    <input placeholder="Email" type="text" name="email">
  </div>
  <div class="field">
    <label>Password</label>
    <input type="password" name="password">
  </div>
  </div>
  <div class="two fields">
  <div class="field">
    <label>Address</label>
    <input placeholder="321 Mayor Walk, Waterford" type="text" name="address">
  </div>
  <div class="field">
    <label>Gender</label>
    <input placeholder="Male" type="text" name="gender">
  </div>
  </div>
  <div class="two fields">
  <div class="field">
    <label>Height (cm) </label>
    <input placeholder="165" type="text" name="height">
  </div>
  <div class="field">
    <label>Starting Weight (kg)</label>
    <input placeholder="80" type="text" name="startingWeight">
  </div>
  </div>
  <button class="ui blue submit button">Submit</button>
</form>